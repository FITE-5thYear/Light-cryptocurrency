<Window x:Class="CertificationAuthorities.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertificationAuthorities"
        mc:Ignorable="d"
        Title="Certification Authority" Height="350" Width="525"
         >

    <TabControl x:Name="tabControl" Margin="0,0,0,0" >
        <TabItem Header="Log" Background="#FFE5E5E5">
            <Grid>

                <TextBox x:Name="logTextBox" TextWrapping="Wrap" Text="" Margin="10,35,10,5"/>
                <Label x:Name="label" Content="Certification Authority Log:" HorizontalAlignment="Left" Margin="5,9,0,0" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>
    </TabControl>

</Window>

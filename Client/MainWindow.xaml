<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="0,0,352,0" Background="WhiteSmoke">
            <Label Name="UserNameLabel" Content="User Name"  />
            <Button Name="ConnectToServerButton" Content="Connect To Server" Click="ConnectToServerButton_OnClick" />
            <Button Name="RequestAccButton" Content="Request All Account" Visibility="Hidden" Click="RequestAccButton_OnClick"/>
        </StackPanel>
        <StackPanel Margin="170,0,0,0" Background="White">
            <Label Name="ConnectionStatusLabel" Content=""/>
        </StackPanel>
    </Grid>
</Window>
